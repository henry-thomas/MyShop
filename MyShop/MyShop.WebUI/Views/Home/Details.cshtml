@model MyShop.Core.Models.Product

@{
    ViewBag.Title = Model.Name + " Details";
}

<h2>@Html.DisplayFor(model=>model.Name)</h2>

<div style="min-height:200px">
    <div class="col-md-2" >
        <img style="max-height: 200px;
" class="img-responsive" src="~/Content/ProductImages/@Model.Image">
    </div>
    <div class="col-md-10">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt></dt>
            <dd><a href="@Url.Action("AddToBasket", "Basket", new { Id = Model.Id})" class="btn btn-default" style="margin-top:10px;margin-bottom:20px">Add to Basket</a></dd>

            <dd>@Html.ActionLink("Back to List", "Index")</dd>
</dl>
    </div>
</div>
<div class="col-md-12 clearfix"></div>
